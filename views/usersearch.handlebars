{{#if books}}
    <ul class="stack">
    {{#each books}}
        <li class="container book">
            <img src={{img}}>
            <div class="bookDetails">
                <h3>{{title}}</h3>
                <h4>by {{author}}</h4>
                <p>Year: {{year}}</p>
                <p>Genre: {{genre}}</p>
                <p class="bookDesc">Description: {{desc}}</p>
            </div>
        </li>
    {{/each}}
    </ul>
{{else}}
    <h2>There are no search results!</h2>
{{/if}}