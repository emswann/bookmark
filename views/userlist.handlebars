{{#if books}}
    <ul class="stack">
    {{#each books}}
        <li class="container book">
            <div class="contents">
                <ul class="statusArea" value="{{status}}">
                    <li value="Not Started" class="notStarted">
                        <button type="submit" class="update-to-list" data-title="{{title}}" data-author="{{author}}" data-genre="{{genre}}" data-url="{{url}}" data-status="Not Started">Not Started</button>
                    </li>
                    <li value="In Progress" class="inProgress">
                        <button type="submit" class="update-to-list" data-title="{{title}}" data-author="{{author}}" data-genre="{{genre}}" data-url="{{url}}" data-status="In Progress">In Progress</button>
                    </li>
                    <li value="Completed" class="completed">
                        <button type="submit" class="update-to-list" data-title="{{title}}" data-author="{{author}}" data-genre="{{genre}}" data-url="{{url}}" data-status="Completed">Completed</button>
                    </li>
                    <li value="Deleted" class="deleted">
                        <button type="submit" class="update-to-list" data-title="{{title}}" data-author="{{author}}" data-genre="{{genre}}" data-url="{{url}}" data-status="Deleted">Deleted</button>
                    </li>
                </ul>
                <div class="bookDetails">
                    <h3>Title: {{title}}</h3>
                    <h4>Author: {{author}}</h4>
                    <p>Genre: {{genre}}</p>
                    <p>Category: {{category}}</p>
                    <p>URL: {{url}}</p>
                </div>
            </div>
            <div class="expand"><span class="glyphicon glyphicon-chevron-down"></span></div>
            </div>
        </li>
    {{/each}}
    </ul>
{{else}}
    <h2>There are no books in your library!</h2>
{{/if}}
